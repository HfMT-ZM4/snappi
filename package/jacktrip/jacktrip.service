[Unit]
Description=jacktrip
Requires=jackd.service
Wants=jackd.service
After=network.target jackd.service

[Install]
WantedBy=multi-user.target

[Service]
User=snappi
Type=simple
LimitRTPRIO=infinity
LimitMEMLOCK=infinity
LimitRTTIME=infinity
EnvironmentFile=-/etc/default/jacktrip
EnvironmentFile=-/etc/snappi.conf
ExecStart=/usr/bin/jacktrip $JACKTRIP_OPTS --receivechannels ${SNAPPI_CHANNELS}
Restart=always
