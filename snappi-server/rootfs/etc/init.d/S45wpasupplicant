#!/bin/sh
#
# Start wpa_supplicant
#

DAEMON="wpa_supplicant"
PIDFILE="/var/run/$DAEMON.pid"

[ -f /etc/wpa_supplicant.conf ] || exit 0

case "$1" in
	start)
		printf "Starting $DAEMON: "
		start-stop-daemon -S -p "$PIDFILE" -x "/usr/sbin/$DAEMON" -- \
			-P "$PIDFILE" -q -B -i wlan0 -f /var/log/$DAEMON.log -c /etc/$DAEMON.conf
		[ $? = 0 ] && echo "OK" || echo "FAIL"
		;;
	stop)
		printf "Stopping $DAEMON: "
		start-stop-daemon -K -q -p "$PIDFILE" -x "/usr/sbin/$DAEMON"
		[ $? = 0 ] && echo "OK" || echo "FAIL"
		;;
	restart|reload)
		$0 stop
		$0 start
		;;
	*)
		echo "Usage: $0 {start|stop|restart}"
		exit 1
esac

exit 0

